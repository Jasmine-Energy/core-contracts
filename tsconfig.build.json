{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "lib": ["dom", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "esnext",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "index.ts",
    "./typechain",
    "./abi/src/**/*.json",
  ],
  "exclude": [
    "**/dist",
  ]
}
